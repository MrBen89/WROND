<h1 class="puzzle-header">Puzzle number <%= @kanji.id %></h1>

<div class="puzzle-col d-flex">
  <div class="puzzle-hints">
    <h2>Puzzle Hints</h2>
    <h1><%= @kanji.kanji %></h1>
    <div>
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#conclussionModal">
  Launch demo modal
</button>
<%= render "kanji/conclussion" %>
    </div>
  </div>

  <div class="puzzle-window">
    <div class="puzzle" id="puzzle" data-controller="puzzle" data-puzzle-target="rootDiv" data-puzzle-variable=<%=@kanji.puzzleInfo.to_json%>>
      This is where the magic (puzzle) happens
    </div>
  </div>
</div>
