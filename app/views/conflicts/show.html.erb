<%= @conflict.user1.user_profile.username %> VS. <%= @conflict.user1.user_profile.username %>

<%= turbo_stream_from "conflicts", method="morph" %>
<div class="container d-flex p-3 m-6" id="conflicts">

  <%= render "p1puzzle", conflict: @conflict %>
  <%# <%= render "p2puzzle", conflict: @conflict %> %>


</div>

<div class="hidden">
   <%= simple_form_for @conflict, remote: true, html: { id: :conflict_form } do |f| %>
  <%= f.input :time ,input_html: {id: "time_field" }%>
  <%= f.input :u1_state, input_html: {id: "u1state_field" } %>
  <%= f.input :u2_state, input_html: {id: "u2state_field" } %>
  <%= f.input :status , input_html: {id: "status_field", value: "in_progress" }%>
  <%= f.input :winner, input_html: {id: "winner_field" } %>
  <%= f.button :submit, id: "conflict-submit" %>
  <% end %>
</div>
